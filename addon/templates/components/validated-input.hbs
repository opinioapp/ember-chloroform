<div class="form-group">
    <label> {{label}}
      {{input type=type value=value placeholder=placeholder autofocus=autofocus class="form-control" name=valuePath}}
    </label>
  {{#if isValid}}
      <span class="valid-input"></span>
  {{/if}}

    <div class="input-error">
      {{#if showErrorMessage}}
          <div class="form-error is-visible">
            {{v-get model valuePath 'message'}}
          </div>
      {{/if}}

      {{#if showWarningMessage}}
          <div class="form-warning is-visible">
            {{v-get model valuePath 'warningMessage'}}
          </div>
      {{/if}}
    </div>
</div>